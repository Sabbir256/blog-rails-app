<h1 class="mb-4 mt-4">New Blog</h1>

<%= form_with model: @blog, url: blog_path do |form|%>
    <div class="mb-3">
        <%= form.label :title%>
        <%= form.text_field :title, class: "form-control", placeholder: "Title of the blog..."%>
    </div>
    <div class="mb-3">
        <%= form.label :body%>
        <%= form.text_area :body, class:"form-control"%>
    </div>

    <div>
        <%=form.submit "Post a Blog", class:"btn btn-primary"%>
    </div>
<%end%>